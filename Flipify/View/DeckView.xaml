<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Flipify.ViewModel"
             xmlns:model="clr-namespace:Flipify.Model"
             x:DataType="vm:DeckVM"
             x:Class="Flipify.View.DeckView"
             Title="DeckView">

    <Grid RowDefinitions="auto,*,auto,auto" Padding="10" RowSpacing="10">
        <Grid>
            <Label Text="Karten im Deck:" FontSize="20" HorizontalTextAlignment="Center"/>
        </Grid>


        <Grid Grid.Row="1" Padding="20">

            <CollectionView ItemsSource="{Binding Cards}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Card">

                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="RotateImage"/>
                            </Grid.GestureRecognizers>

                            <Image x:Name="CardImage" Source="notiz.png" RotationY="0"/>
                            
                            <Label x:Name="CardText" Text="{Binding DisplayText}" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
    
                            <Grid IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:DeckVM}}, Path=CanEditDeck}">
                                <Border Stroke="AliceBlue" StrokeShape="RoundRectangle 30" StrokeThickness="3" WidthRequest="50" HeightRequest="50" HorizontalOptions="End" VerticalOptions="End">
                                    <Button Text="X" FontSize="20" FontAttributes="Bold" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DeckVM}}, Path=DeleteCardCommand}" CommandParameter="{Binding .}"/>
                                </Border>
                                <Border Stroke="AliceBlue" StrokeShape="RoundRectangle 30" StrokeThickness="3" WidthRequest="50" HeightRequest="50" HorizontalOptions="Start" VerticalOptions="End">
                                    <Button Text="#" FontSize="20" FontAttributes="Bold" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DeckVM}}, Path=EditCardCommand}" CommandParameter="{Binding .}"/>
                                </Border>
                            </Grid>

                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <Button Grid.Row="3" Text="Back" Command="{Binding NavigateBackCommand}"/>
        <Button Grid.Row="2" IsVisible="{Binding CanEditDeck}" Text="Karte hinzufÃ¼gen" Command="{Binding NewCardCommand}" />
    </Grid>

</ContentPage>