<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Flipify.ViewModel"
             x:DataType="vm:CardDetailVM"
             x:Class="Flipify.View.CardDetailView"
             Title="CardDetailView">
    
    <Grid RowDefinitions="*,*,*,auto,auto" RowSpacing="10" Padding="10">
        <Label Grid.Row="0" Text="{Binding LabelText}" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Entry Grid.Row="1" Placeholder="Vorderseite (z.B. Frage)" Text="{Binding Front}" HorizontalTextAlignment="Center"/>
        <Entry Grid.Row="2" Placeholder="RÃ¼ckseite (z.B. Antwort)" Text="{Binding Back}" HorizontalTextAlignment="Center"/>
        <Button Grid.Row="3" Text="{Binding ButtonText}" Command="{Binding SaveCardCommand}" />
        <Button Grid.Row="4" Text="Back" Command="{Binding NavigateBackCommand}"/>
    </Grid>
</ContentPage>